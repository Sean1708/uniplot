#### https://github.com/ctokheim/matplotlibrc/blob/master/whitegrid/whitegrid_paper

### LINES
lines.linewidth   : 1.5   # line width in points
lines.antialiased : True  # render lines in antialised (no jaggies)

### PATCHES
patch.linewidth   : 0.5     # edge width in points
patch.facecolor   : 348ABD  # blue
patch.edgecolor   : eeeeee
patch.antialiased : True    # render patches in antialised (no jaggies)

### FONT
font.family     : sans-serif
font.size       : 12.0
font.sans-serif : Helvetica, Bitstream Vera Sans, Lucida Grande, Verdana, Geneva, Lucid, Arial, Helvetica, Avant Garde, sans-serif

### TEXT
text.usetex : True  # use latex for all text handling.

### AXES
axes.facecolor   : white    # axes background color
axes.edgecolor   : CCCCCC   # axes edge color
axes.linewidth   : 1.7      # edge linewidth
axes.grid        : True     # display grid or not
axes.titlesize   : x-large  # fontsize of the axes title
axes.labelsize   : large    # fontsize of the x any y labels
axes.labelcolor  : 555555
axes.axisbelow   : True     # whether axis gridlines and ticks are below
                            # the axes elements (lines, text, etc)
axes.color_cycle : 348ABD, 7A68A6, A60628, 467821, CF4457, 188487, E24A33, 4B3E6A, 26678C
                            # E24A33 : orange
                            # 7A68A6 : purple
                            # 348ABD : blue
                            # 188487 : turquoise
                            # A60628 : red
                            # CF4457 : pink
                            # 467821 : green
                            # 4B3E6A : dark purple
                            # 26678C : dark blue

### TICKS
xtick.major.size : 0       # major tick size in points
xtick.minor.size : 0       # minor tick size in points
xtick.major.pad  : 6       # distance to major tick label in points
xtick.minor.pad  : 6       # distance to the minor tick label in points
xtick.color      : 555555  # color of the tick labels
xtick.labelsize  : medium  # fontsize of the tick labels
xtick.direction  : in      # direction: in or out

ytick.major.size : 0       # major tick size in points
ytick.minor.size : 0       # minor tick size in points
ytick.major.pad  : 6       # distance to major tick label in points
ytick.minor.pad  : 6       # distance to the minor tick label in points
ytick.color      : 555555  # color of the tick labels
ytick.labelsize  : medium  # fontsize of the tick labels
ytick.direction  : in      # direction: in or out


### GRIDS
grid.color     : DDDDDD  # grid color
grid.linestyle : -       # dotted
grid.linewidth : 1.5     # in points

### Legend
legend.fancybox : True   # if True, use a rounded box for the
                         # legend, else a rectangle
legend.fontsize : large

### FIGURE
figure.facecolor      : white  # figure facecolor; 0.75 is scalar gray
figure.edgecolor      : white  # figure edgecolor
figure.subplot.hspace : 0.5    # the amount of height reserved for white space between subplots
